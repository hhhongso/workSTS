package sample03;


public class ScoreImpl implements Score {
	private ScoreDTO scoreDTO; 
	
	public ScoreImpl(ScoreDTO scoreDTO) {
		this.scoreDTO = scoreDTO;
		
		scoreDTO.setTot(scoreDTO.getKor() + scoreDTO.getEng() + scoreDTO.getMath());
		scoreDTO.setAvg(scoreDTO.getTot()/3.0);
	}
	
	@Override
	public void calcTot() {
		scoreDTO.getTot();

	}

	@Override
	public void calcAvg() {
		scoreDTO.getAvg();

	}

	@Override
	public void display() {
		System.out.println("이름 \t 국어 \t 영어 \t 수학 \t 총점 \t 평균 ");
		System.out.println(scoreDTO.getName()  + "\t" + scoreDTO.getKor()  + "\t" + scoreDTO.getEng()  + "\t" + scoreDTO.getMath()  + "\t" + scoreDTO.getTot()  + "\t" + String.format("%.3f", scoreDTO.getAvg()));		
	}
	

	@Override
	public void modify() {
		// TODO Auto-generated method stub

	}

}
